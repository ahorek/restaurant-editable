.top48 {
    margin-top: 48px;
}
.alert-success {
    background-color: #DFF0D8;
    border-color: #D6E9C6;
    color: #1A0000;
}
.alert-error, #error_explanation, #errorExplanation {
    background-color: #E60000;
    border-color: #FF6666;
    color: #1A0000;
}
.alert, #error_explanation, #errorExplanation {
    border-radius: 10px;
}
.floatleft {
    float: left;
}
.floatright {
    float: right;
}
.clear {
    clear: both;
}
.hidden {
    display: none;
}
.table-striped > tbody > tr:nth-child(2n+1) > td.red, .table-bordered > tbody > tr > td.red {
    background-color: #E60000;
}
.table-bordered > tbody > tr > td, .table-bordered > thead > tr > th {
    background-color: #FFFFFF;
}
.table-bordered, table-striped {
    color: black;
}
.top_logo > div {
    height: 140px;
    background: url(<%= asset_data_uri 'top_logo.png'%>) no-repeat center;
}
#top_nav, body {
    background: #2B0E0E url(<%= asset_data_uri 'top_nav_background.jpg'%>);
}
#top_nav, .navbar-fixed-bottom.bottom_buttons {
    z-index: 100;
}
#top_nav {
    max-height: 395px;
}
body {
    padding-top: 210px;
}
@media (max-width:768px) {
    .top_logo > div {
        background: url(<%= asset_data_uri 'top_logo_mobile.png'%>) no-repeat center;
        height: 60px;
    }
    body {
      padding-top: 200px;
    }
    #top_nav {
      max-height: 200px;
    }
}
@media print {
    body {
      padding-top: 0px;
    }
    #content .container {
      margin-left: 0px;
    }
}
