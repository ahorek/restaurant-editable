/*
 * This is a manifest file that'll automatically include all the stylesheets available in this directory
 * and any sub-directories. You're free to add application-wide styles to this file and they'll appear at
 * the top of the compiled file, but it's generally better to create a new file per style scope.
 *= require_self
 *= require_bootstrap
 *= require_bootstrap_patch
 *= require_jquery_ui
 *= require_jquery_galereya
 *= require_jquery_multilevelpushmenu
 *= require_tree .
*/

.top48 {
    margin-top: 48px;
}
#menu_multilevelpushmenu {
    position: fixed;
}
.alert-success {
    background-color: #DFF0D8;
    border-color: #D6E9C6;
    color: #1A0000;
}
.alert-error, #error_explanation, #errorExplanation {
    background-color: #E60000;
    border-color: #FF6666;
    color: #1A0000;
}
.alert, #error_explanation, #errorExplanation {
    border-radius: 10px;
}
.floatleft {
    float: left;
}
.floatright {
    float: right;
}
.clear {
    clear: both;
}
.hidden {
    display: none;
}
.table-striped > tbody > tr:nth-child(2n+1) > td.red, .table-bordered > tbody > tr > td.red {
    background-color: #E60000;
}
.table-bordered > tbody > tr > td, .table-bordered > thead > tr > th {
    background-color: #FFFFFF;
}
.table-bordered, table-striped {
    color: black;
}
.top_logo span.top_logo_container {
    height: 140px;
    background: url(<%= asset_data_uri 'top_logo.png'%>) no-repeat center;
}
#bottom_bar, #top_nav, body {
    background: #2B0E0E url(<%= asset_data_uri 'top_nav_background.jpg'%>);
}
#bottom_bar {
    z-index: 0;
}
#top_nav, .navbar-fixed-top.action_buttons, #top_nav, .navbar-fixed-bottom.action_buttons {
    z-index: 100;
}
#top_nav {
    max-height: 395px;
}
body {
    padding-top: 160px;
}
#content {
    padding-left: 300px;
}
#content > .container {
    margin-left: 0px;
}
#mobile_menu {
    display: none;
}
#menu {
    display: inline;
}
#menu .multilevelpushmenu_wrapper .levelHolderClass {
    min-height: 0px;
    background: none repeat scroll 0% 0% brown;
}

@media screen and (max-width:768px) , screen and (max-height: 550px) {
    #mobile_menu {
        display: block;
    }
    .top_logo span.top_logo_container {
        background: url(<%= asset_data_uri 'top_logo_mobile.png'%>) no-repeat center;
        height: 60px;
        margin-top: 30px;
    }
    body {
      padding-top: 160px;
    }
    #top_nav {
      max-height: 200px;
    }
    #bottom_bar, #menu {
      display: none;
    }
    #content {
      padding-left: 0px;
    }
    #content > .container {
      margin-left: 0px;
      margin-top: 0px;
    }
}
@media print {
    body {
      padding-top: 0px;
    }
    #content .container {
      margin-left: 0px;
    }
}
