<nav class="navbar navbar-default" id="top_nav" role="navigation">
  <div class="container">
    <div class="top_logo">
      <div><%= link_to(content_tag(:div, '', :class => 'center-block').html_safe, root_path, :title => '') %></div>
    </div>
    <div class="clear"></div>
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#baseapp-navbar-collapse-menu">
        <span class="sr-only"><%= t(:toggle_navigation) %></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to t(:title_home), root_path, :class => "navbar-brand" %>
    </div>

    <div class="floatright">
      <%= render :partial => 'layouts/application/languages' %>
    </div>

    <div class="collapse navbar-collapse" id="baseapp-navbar-collapse-menu">
      <ul class="nav navbar-nav">
        <li class="togglable"><%= link_to t(:title_home), root_path, :class => "navbar-brand" %></li>
        <li><%= link_to t(:title_about), about_pages_path %></li>

        <% if (sl = Setting.where(:name => 'menu_sublinks').first.try(:value)).present? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t(:title_menu) %><span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% submenus = sl.split(',') %>
              <% submenus.each do |submenu| %>
                <% sm = submenu.split('/') %>
                <li><a href="<%= sm.first %>"><%= sm.last %></a></li>
              <% end %>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:title_menu), menus_pages_path %></li>
        <% end %>

        <li><%= link_to t(:title_gallery), gallery_pages_path %></li>
        <li><%= link_to t(:title_contact), contact_pages_path %></li>

        <% if user_signed_in? %>
          <li><%= link_to t(:title_account_settings), edit_user_registration_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to t(:title_administration), admin_path %></li>
          <% end %>
          <li><%= link_to t(:title_sign_out), destroy_user_session_path %></li>
        <% else %>
          <li><%#= link_to t(:title_sign_in), new_user_session_path %></li>
        <% end -%>
      </ul>
    </div>

  </div>
</nav>
