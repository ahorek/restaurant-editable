<div class="clear"></div>
<div class="navbar-fixed-bottom bottom_buttons hidden-print">
    <ul class="nav navbar-nav pull-right buttons">
        <% if (fb = Setting.where(:name => 'facebook_url').first.try(:value)).present? %>
          <li><%= link_to(image_tag('icon_facebook.png', :title => t(:title_facebook)), fb) %></li>
        <% end %>
        <li><%= link_to(image_tag('icon_wififree.png', :title => t(:title_wififree)), '#') %></li>
        <% unless user_signed_in? %>
          <li><%= link_to(image_tag('icon_login.png', :title => t(:title_sign_in)), new_user_session_path) %></li>
        <% end %>
    </ul>

    <ul class="nav navbar-nav pull-left languages">
        <% available_languages.each do |lang| %>
          <li><%= link_to image_tag(flag_file(lang.to_s)), url_for(params.merge(:locale => lang.to_s)), :title => t(:"languages.#{lang.to_s}") %></li>
        <% end %>
    </ul>
</div>
<div class="clear"></div>